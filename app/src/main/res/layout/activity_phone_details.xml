                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10sp"
                        android:text="In The Box "/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginTop="10sp"
                        android:textAlignment="center"
                        android:text="Handset, USB C Charge Cble (1m), Documentation"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:background="#CDC8C8"
                    android:labelFor="@+id/frameLayout" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="10sp"
                    android:text="Product highlights "/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400sp"
                    android:src="@drawable/highlight" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>



        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#DDDBDB" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:id="@+id/btnadd"
            android:gravity="center"
            android:weightSum="2"
            android:background="@color/white"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/productAddToCartButton"
                android:layout_width="150sp"
                android:layout_height="35sp"
                android:text="@string/add_to_cart"
                android:background="@drawable/btn1"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/productBuyNowButton"
                android:layout_width="150sp"
                android:textColor="@color/white"
                android:text="@string/buy_now"
                android:layout_height="35sp"
                android:background="@drawable/btn"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>