<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Edit_profile_Activity">

    <RelativeLayout
        android:id="@+id/lytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D5D2D2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backediteprofile"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_arrow_back_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/search"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="65sp"
            android:src="@drawable/baseline_search_24" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/cart"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25sp"
            android:src="@drawable/baseline_shopping_cart_24" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:background="@color/blue"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/man"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/editProfileSelectImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_edit"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:background="@drawable/circle_background"
                        android:padding="4dp" />

                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/gray"
            android:layout_gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            app:hintTextColor="@color/black"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#2C4AFB"
            android:inputType="text"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundMode="outline"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEditProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F2F2F2"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"/>
        </com.google.android.material.textfield.TextInputLayout>


        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            app:hintTextColor="@color/black"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#2C4AFB"
            android:inputType="number"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundMode="outline"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEditProfileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F2F2F2"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:hintTextColor="@color/black"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="#2C4AFB"
            android:inputType="textEmailAddress"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundMode="outline"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEditProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F2F2F2"
                android:inputType="textEmailAddress"
                android:allowClickWhenDisabled="false"
                android:enabled="false"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editProfileBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:text="Edit"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/poppinssemibold"/>

    <ProgressBar
        android:id="@+id/editProfileProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>




</LinearLayout>