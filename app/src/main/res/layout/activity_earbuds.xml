<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".EarbudsActivity">

    <RelativeLayout
        android:id="@+id/lytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D5D2D2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backearbuds"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_arrow_back_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Earbuds"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="40sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/search"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="105sp"
            android:src="@drawable/baseline_search_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/camera"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="65sp"
            android:src="@drawable/baseline_photo_camera_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/gelery"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25sp"
            android:src="@drawable/baseline_insert_photo_24" />


    </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            
            <LinearLayout
                android:id="@+id/earbudsdetailes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="147dp"
                    android:src="@drawable/boatearbuds" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="boAt"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Airdopes Alpha with 35..."
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_gravity="center"
                            android:src="@drawable/arrows"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="71%"
                            android:layout_gravity="center"
                            android:textColor="@color/green"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/earbudstext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3,490"
                            android:layout_marginStart="3sp"
                            android:textColor="@color/gray"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹999"
                            android:layout_marginStart="5sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15sp"/>


                    </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save extra with vombo offers"
                            android:textColor="@color/green"
                            android:textSize="13sp"/>



                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:src="@drawable/rating"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:src="@drawable/express"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXPRESS "
                            android:layout_marginStart="5sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="11sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 day delivery "
                            android:layout_marginStart="2sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="11sp"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#DEDDDD"/>

            <LinearLayout
                android:id="@+id/earbudsdetailes1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="147sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="boAt"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10sp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Airdopes Supreme w/4..."
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:layout_gravity="center"
                            android:src="@drawable/arrows"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="71%"
                            android:layout_gravity="center"
                            android:textColor="@color/green"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/earbudstext1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4,990"
                            android:textColor="@color/gray"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹1,399"
                            android:layout_marginStart="5sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15sp"/>


                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save extra with vombo offers"
                        android:textColor="@color/green"
                        android:textSize="13sp"/>



                    <ImageView
                        android:layout_width="140sp"
                        android:layout_height="25sp"
                        android:src="@drawable/rating1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:src="@drawable/express"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXPRESS "
                            android:layout_marginStart="5sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="11sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 day delivery "
                            android:layout_marginStart="2sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textSize="11sp"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




</LinearLayout>