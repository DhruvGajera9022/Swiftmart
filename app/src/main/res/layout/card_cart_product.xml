<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/cart_card_background">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp">
            <ImageView
                android:id="@+id/cartActivityImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="Product Image"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/cartProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="iPhone 16 Pro"
                android:fontFamily="@font/poppinsbold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppinssemibold"/>

                <TextView
                    android:id="@+id/cartProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="112900"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinssemibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Quantity controls (Plus and Minus buttons) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <!-- Minus Button -->
                        <ImageButton
                            android:id="@+id/cartMinusButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_remove"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Decrease quantity"
                            app:tint="@color/black"/>

                        <!-- Quantity Text -->
                        <TextView
                            android:id="@+id/cartProductQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/poppinsbold"/>

                        <!-- Plus Button -->
                        <ImageButton
                            android:id="@+id/cartPlusButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_add"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Increase quantity"
                            app:tint="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <!-- Trash Icon -->
                        <ImageButton
                            android:id="@+id/cartTrashButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_delete"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Delete item"
                            app:tint="@color/black"
                            android:layout_marginStart="80dp"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
