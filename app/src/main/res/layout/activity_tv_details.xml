<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".tv_detailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="680sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="450sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/samasungtv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#090909" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginHorizontal="10sp"
                android:text="Select Variant"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10sp"
                        android:text="Dispaly Size :  "/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        android:textSize="15sp"
                        android:layout_marginTop="10sp"
                        android:text="43 "/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:background="#CDC8C8"
                    android:labelFor="@+id/frameLayout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10sp"
                        android:text="Lanuch Year :  "/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        android:textSize="15sp"
                        android:layout_marginTop="10sp"
                        android:text="2023 "/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:background="#CDC8C8"
                    android:labelFor="@+id/frameLayout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10sp"
                        android:text="HD Technology :  "/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        android:textSize="15sp"
                        android:layout_marginTop="10sp"
                        android:text="Full HD "/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5sp"
                    android:background="#CDC8C8"
                    android:labelFor="@+id/frameLayout" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10sp"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAMSUNG"
                        android:layout_marginTop="10sp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="5sp"
                        android:textColor="@color/black"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="108 cm (43 inch) full HD LED Smart Tizen TV with 300+ free channles | HDR | PurColor | Dobly Digital Plus | Hyper Real Picture Engine | Triple Protection ConnectShare (USB 2.0) (UA43T50AKXXL)"

                        android:layout_marginStart="5sp"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹1,224/month"
                    android:layout_marginTop="4sp"
                    android:layout_marginHorizontal="10sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:text="24 months Cost EMI Plan with SBI credit-card."
                    android:textSize="15sp"
                    android:textColor="@color/black"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2sp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="13sp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="18sp"
                        android:layout_height="18sp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrows"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26%"
                        android:layout_gravity="center"
                        android:textColor="@color/green"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/iphonetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,64,900"
                        android:layout_marginStart="3sp"
                        android:textColor="@color/gray"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1,21,999"
                        android:layout_marginStart="5sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ ₹99 Secured Packaging fee"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="5sp"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:text="Free delivery"
                    android:layout_marginTop="3sp"
                    android:textSize="13sp"
                    android:textColor="@color/black"/>




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="15sp"
                android:background="#CDC8C8"
                android:labelFor="@+id/frameLayout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/warranty"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="40sp"
                        android:layout_margin="5sp"
                        android:src="@drawable/apple"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="1 year warranty for phone and 1 year"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text="warranty for in Box Accessories."
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue"
                                android:textSize="14sp"
                                android:text="Know"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textSize="14sp"
                            android:text="More"
                            />
                    </LinearLayout>
                </LinearLayout>


       

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="15sp"
                android:background="#CDC8C8"
                android:labelFor="@+id/frameLayout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:orientation="vertical">





                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="15sp"
                    android:background="#CDC8C8"
                    android:labelFor="@+id/frameLayout" />




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>



        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#DDDBDB" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:id="@+id/btnadd"
            android:gravity="center"
            android:weightSum="2"
            android:background="@color/white"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/productAddToCartButton"
                android:layout_width="150sp"
                android:layout_height="35sp"
                android:text="Add to Cart"
                android:background="@drawable/btn1"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/productBuyNowButton"
                android:layout_width="150sp"
                android:textColor="@color/white"
                android:text="Buy Now"
                android:layout_height="35sp"
                android:background="@drawable/btn"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>