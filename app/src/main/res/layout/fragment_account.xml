<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Frgments.AccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20sp"
            android:fontFamily="@font/poppinsbold"
            android:text="Hey! "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/accountFragmentUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginStart="2sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppinsmedium"/>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5sp"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/user_icon" />

                <TextView
                    android:id="@+id/profileEditProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Edit Profile"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/profileEditProfileBtn"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10sp"
                android:background="#F1EEEE" />

            <LinearLayout
                android:id="@+id/llOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/orderhistory" />

                <TextView
                    android:id="@+id/profileOrderHistory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Order Histroy"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/profileOrderHistoryBtn"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10sp"
                android:background="#F1EEEE" />

            <LinearLayout
                android:id="@+id/llLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/language_icon" />

                <TextView
                    android:id="@+id/profileSelectLanguage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Select Language"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/profileSelectLanguageBtn"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10sp"
                android:background="#F1EEEE" />

            <LinearLayout
                android:id="@+id/llwishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/profileSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Wishlist"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/wishlist"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10sp"
                android:background="#F1EEEE" />
            <LinearLayout
                android:id="@+id/llsavedaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_location_pin_24" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Saved Addresses"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/addressBtn"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10sp"
                android:background="#F1EEEE" />

            <LinearLayout
                android:id="@+id/llDeleteUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/delete_icon" />

                <TextView
                    android:id="@+id/profileDeleteUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Delete Account"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/profileDeleteUserBtn"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/poppinsbold"
        android:text="information"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10sp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/info_icon" />

                <TextView
                    android:id="@+id/profileAboutUs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppinsregular"
                    android:text="About Us"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/profileAboutUsBtn"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10sp"
                android:background="#F1EEEE" />

            <LinearLayout
                android:id="@+id/llPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/books_icon" />

                <TextView
                    android:id="@+id/profilePrivacyPolicy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Privacy Policy"

                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/profilePrivacyPolicyBtn"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10sp"
                android:background="#F1EEEE" />
            <LinearLayout
                android:id="@+id/llRateUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/rateus" />

                <TextView
                    android:id="@+id/profileRateUs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25sp"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Rate Us"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/profileRateUsBtn"
                    android:layout_width="2sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/right_arrow_icon" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/userLogout"
            android:layout_width="190sp"
            android:textColor="@color/white"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn"
            android:fontFamily="@font/poppinssemibold"
            android:text="Logout"
            android:textAllCaps="false"
            android:textSize="17sp" />
    </LinearLayout>



</LinearLayout>