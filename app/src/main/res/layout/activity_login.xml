<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".LoginActivity"
    android:background="@color/background_color"
    android:scrollIndicators="none"
    android:id="@+id/signInScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_logo"
            android:layout_marginBottom="16dp"
            android:contentDescription="App Logo" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text_color"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppinsbold"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your details to sign in."
            android:textSize="16sp"
            android:textColor="@color/secondary_text_color"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppinsregular"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/signInEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@example.com"
            android:textColorHint="#999999"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppinsregular"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/signInPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="******"
            android:textColorHint="#999999"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edit_text"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppinsregular"/>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/signInForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="14sp"
            android:textColor="@color/link_color"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppinsregular"/>

        <!-- Sign In Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/signInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:padding="12dp"
            app:cornerRadius="15dp"
            android:elevation="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppinssemibold"/>

        <!-- Sign Up Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account yet?"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/secondary_text_color" />

            <TextView
                android:id="@+id/signInSignUpTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign up"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/link_color"
                android:fontFamily="@font/poppinsregular"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
